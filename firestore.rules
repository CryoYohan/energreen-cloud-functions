rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow writes only if the request is authenticated (e.g., from a Cloud Function)
    match /devices/{deviceId}/realtime_readings/{readingId} {
      allow write: if request.auth != null; // Allows authenticated writes
    }
    // You might need a rule for the top-level 'devices' collection too
    match /devices/{deviceId} {
      allow write: if request.auth != null;
    }
    // Keep other paths restricted unless needed
    match /{document=**} {
      allow read, write: if false;
    }
  }
}